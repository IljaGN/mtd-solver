<UserControl x:Class="MTD_Solver.View.Components.MtdInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MTD_Solver.View.Components"
             mc:Ignorable="d"
             Name="Input">
    <Grid>
        <StackPanel Orientation="Horizontal" DataContext="{Binding ElementName=Input}">
            <Label Content="{Binding Title}"/>
            <TextBox Width="80" Text="{Binding Value}"/>
            <Label Content="℃"/>
        </StackPanel>
    </Grid>
</UserControl>
