<UserControl x:Class="MTD_Solver.View.Components.Exchangers.ShellAndTubeSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MTD_Solver.View.Components.Exchangers"
        mc:Ignorable="d"
        Name="Settings">
    <Grid DataContext="{Binding ElementName=Settings}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Number of Shells:" VerticalAlignment="Center" Grid.Column="0"/>
        <TextBox Text="{Binding ShellCount}" VerticalAlignment="Center" Grid.Column="1"/>
    </Grid>
</UserControl>
