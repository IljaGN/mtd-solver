<Window x:Class="MTD_Solver.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        xmlns:com="clr-namespace:MTD_Solver.View.Components"
        xmlns:exc="clr-namespace:MTD_Solver.View.Components.Exchangers"
        xmlns:r="clr-namespace:MTD_Solver.Properties"
        Name="mainWindow" Title="MainWindow"
        Height="300" ResizeMode="CanMinimize"
        FontSize="15">
    <Window.Style>
        <Style>
            <Setter Property="Window.MinWidth" Value="610"/>
            <Setter Property="Window.MaxWidth" Value="610"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding SelectedValue, ElementName=comboBox}" Value="SHELL_AND_TUBE">
                    <Setter Property="Window.MinWidth" Value="846"/>
                    <Setter Property="Window.MaxWidth" Value="846"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding SelectedValue, ElementName=comboBox}" Value="CROSS_FLOW">
                    <Setter Property="Window.MinWidth" Value="846"/>
                    <Setter Property="Window.MaxWidth" Value="846"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Style>
    <Grid Margin="10" DataContext="{Binding ElementName=mainWindow}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="1.4*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="338"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="226"/>
            <ColumnDefinition>
                <ColumnDefinition.Style>
                    <Style>
                        <Setter Property="ColumnDefinition.Width" Value="0"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedValue, ElementName=comboBox}" Value="SHELL_AND_TUBE">
                                <Setter Property="ColumnDefinition.Width" Value="10"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding SelectedValue, ElementName=comboBox}" Value="CROSS_FLOW">
                                <Setter Property="ColumnDefinition.Width" Value="10"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ColumnDefinition.Style>
            </ColumnDefinition>
            <ColumnDefinition>
                <ColumnDefinition.Style>
                    <Style>
                        <Setter Property="ColumnDefinition.Width" Value="0"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedValue, ElementName=comboBox}" Value="SHELL_AND_TUBE">
                                <Setter Property="ColumnDefinition.Width" Value="226"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding SelectedValue, ElementName=comboBox}" Value="CROSS_FLOW">
                                <Setter Property="ColumnDefinition.Width" Value="226"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ColumnDefinition.Style>
            </ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid>
            <GroupBox Padding="5" Header="{x:Static r:Resources.AreaInput}" Grid.Column="0" Grid.Row="0">
                <Grid DataContext="{Binding In}">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid DataContext="{Binding HotFluid}" Grid.Column="0" Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <com:MtdInput Title="T1" Value="{Binding Inlet, Mode=TwoWay}" Grid.Column="0" Grid.Row="0"/>
                        <com:MtdInput Title="T2" Value="{Binding Outlet, Mode=TwoWay}" Grid.Column="0" Grid.Row="1"/>
                    </Grid>
                    <Grid DataContext="{Binding ColdFluid}" Grid.Column="1" Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <com:MtdInput Title="t1" Value="{Binding Inlet, Mode=TwoWay}" IsTabStop="False" Grid.Column="0" Grid.Row="0"/>
                        <com:MtdInput Title="t2" Value="{Binding Outlet, Mode=TwoWay}" IsTabStop="False" Grid.Column="0" Grid.Row="1"/>
                    </Grid>
                </Grid>
            </GroupBox>
        </Grid>
        <DockPanel LastChildFill="True" Grid.Column="2" Grid.Row="0" Grid.RowSpan="3">
            <ComboBox
                x:Name="comboBox"
                Margin="0 0 0 5"
                Padding="5"
                TabIndex="1"
                DockPanel.Dock="Top"
                ItemsSource="{Binding ComboBoxOptions}"
                SelectedValue="{Binding WindowData.ExchangerType, Mode=TwoWay}"
                SelectedValuePath="Type"
                DisplayMemberPath="Caption"
                SelectionChanged="ComboBox_SelectionChanged"/>
            <GroupBox
                Header="{x:Static r:Resources.AreaExchangerSettings}"
                Margin="0 0 0 10"
                Padding="5"
                DockPanel.Dock="Top">
                <GroupBox.Style>
                    <Style>
                        <Setter Property="UIElement.Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedValue, ElementName=comboBox}" Value="SHELL_AND_TUBE">
                                <Setter Property="UIElement.Visibility" Value="Visible"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding SelectedValue, ElementName=comboBox}" Value="CROSS_FLOW">
                                <Setter Property="UIElement.Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </GroupBox.Style>
                <StackPanel DataContext="{Binding WindowData}">
                    <exc:ShellAndTubeSettings ShellsCount="{Binding ShellAndTubeSettings.ShellCount, Mode=TwoWay}">
                        <exc:ShellAndTubeSettings.Style>
                            <Style>
                                <Setter Property="UIElement.Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedValue, ElementName=comboBox}" Value="SHELL_AND_TUBE">
                                        <Setter Property="UIElement.Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </exc:ShellAndTubeSettings.Style>
                    </exc:ShellAndTubeSettings>
                    <exc:CrossFlowSettings
                        DataContext="{Binding CrossFlowSettings}"
                        PassCountSelected="{Binding Pass, Mode=TwoWay}"
                        FluidsBehaviorSelected="{Binding Fluids, Mode=TwoWay}">
                        <exc:CrossFlowSettings.Style>
                            <Style>
                                <Setter Property="UIElement.Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedValue, ElementName=comboBox}" Value="CROSS_FLOW">
                                        <Setter Property="UIElement.Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </exc:CrossFlowSettings.Style>
                    </exc:CrossFlowSettings>
                    <Button Margin="35 10 35 0" Content="{x:Static r:Resources.BtnApply}" Click="Button_Click_1"/>
                </StackPanel>
            </GroupBox>
            <Button BorderThickness="5" Background="AliceBlue" IsTabStop="False" Content="Image1"/>
        </DockPanel>
        <Button Background="AliceBlue" IsTabStop="False" Grid.Column="4" Grid.Row="0" Grid.RowSpan="3" Content="Image2"/>
        <GroupBox Padding="5" Header="{x:Static r:Resources.AreaOutput}" Grid.Column="0" Grid.Row="2">
            <Grid DataContext="{Binding Out}">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0" Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <com:MtdInput Title="P" Value="{Binding P, Mode=OneWay}" IsTabStop="False" Grid.Column="0" Grid.Row="0"/>
                    <com:MtdInput Title="R" Value="{Binding R, Mode=OneWay}" IsTabStop="False" Grid.Column="0" Grid.Row="1"/>
                </Grid>
                <Grid Grid.Column="1" Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <com:MtdInput Title="F" Value="{Binding CorrectionFactor, Mode=OneWay}" IsTabStop="False" Grid.Column="0" Grid.Row="0"/>
                    <com:MtdInput Title="T" Value="{Binding Mtd, Mode=OneWay}" IsTabStop="False" Grid.Column="0" Grid.Row="1"/>
                </Grid>
                <Grid HorizontalAlignment="Center" Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2">
                    <com:MtdInput Title="{x:Static r:Resources.Result}" Value="{Binding CorrectionMtd, Mode=OneWay}" Grid.Column="0" Grid.Row="1"/>
                </Grid>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
